{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.36/schema.json",
    "app_specific_configuration_path": [
        "$Env:KOMOREBI_CONFIG_HOME/applications.json",
        "$Env:KOMOREBI_CONFIG_HOME/custom_applications.json"
    ],
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 2,
    "default_container_padding": 3,
    "border": true,
    "border_width": 5,
    "border_style": "System",
    "border_colours": {
        "single": {
            "r": 23,
            "g": 116,
            "b": 188
        },
        "stack": {
            "r": 256,
            "g": 165,
            "b": 66
        },
        "monocle": {
            "r": 255,
            "g": 51,
            "b": 153
        },
        "floating": {
            "r": 255,
            "g": 51,
            "b": 153
        },
        "unfocused": {
            "r": 128,
            "g": 128,
            "b": 128
        }
    },
    "theme": {
        "palette": "Catppuccin",
        "name": "Mocha"
    },
    "stackbar": {
        "height": 20,
        "mode": "OnStack",
        "label": "Process",
        "tabs": {
            "width": 200,
            "font_size": 14
        }
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "I",
                    "layout": "BSP"
                },
                {
                    "name": "II",
                    "layout": "BSP"
                },
                {
                    "name": "III",
                    "layout": "BSP"
                },
                {
                    "name": "IV",
                    "layout": "BSP"
                }
            ],
            "work_area_offset": {
                "bottom": 50,
                "left": 0,
                "top": 50,
                "right": 0
            }
        },
        {
            "workspaces": [
                {
                    "name": "I",
                    "layout": "BSP"
                },
                {
                    "name": "II",
                    "layout": "BSP"
                },
                {
                    "name": "III",
                    "layout": "BSP"
                },
                {
                    "name": "IV",
                    "layout": "BSP"
                }
            ]
        }
    ],
    "manage_rules": [
        {
            "kind": "Exe",
            "id": "PBIDesktop.exe",
            "matching_strategy": "Equals"
        }
    ]
}
